@{
    Layout = null;
    var appTitle = "Employee Management System";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appTitle</title>

    <!-- ✅ Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ✅ Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- ✅ Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- ✅ DataTables CSS -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- ✅ SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- ✅ Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- ✅ jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- ✅ DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .footer {
            text-align: center;
            padding: 15px 0;
            font-size: 0.9rem;
            color: #777;
            background-color: #f1f1f1;
            margin-top: 40px;
        }

        main {
            padding-top: 20px;
        }

        .swal2-popup {
            font-family: 'Inter', sans-serif;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- ✅ Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fa-solid fa-people-group me-2"></i>@appTitle
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Employees">Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" id="navLogout" style="cursor:pointer;">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Main Content -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- ✅ Footer -->
    <footer class="footer">
        <p class="mb-0">&copy; @DateTime.Now.Year - Employee Management System</p>
    </footer>

    <!-- ✅ Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        // Logout event ở navbar (dành cho global logout)
        $(document).ready(() => {
            $("#navLogout").click(() => {
                localStorage.removeItem("jwt");
                localStorage.removeItem("refresh");
                Swal.fire("Logged out", "You have been signed out.", "info")
                    .then(() => window.location.href = "/EmployeesUI");
            });
        });
    </script>
</body>
</html>
